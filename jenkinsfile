node('') {
    stage('Git')
    {
        git 'https://github.com/spring-projects/spring-petclinic.git'
    }
    
    stage('build')
    {
    sh 'mvn package' 
    sh 'pwd'
    }
    stage('Archival')
    {
        git 'https://github.com/srinivas-reddy-mula/apache_cookbook.git'
        sh 'cp target/*.jar /opt/tomcat/webapps/'
        
        sh 'terraform init .'
        sh 'terraform apply -var "aws_access_key=XXXXXXXXXXXXXXXXXXX" -var "aws_secret_key=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
    }

}
